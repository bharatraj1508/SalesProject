 <a href="/api/search">&#8592;Back</a>
 <h3>Search Results</h3>
 <div class="table-responsive">
    <table class="table table-striped table-hover" style="width: 100%;">
         <thead class="thead-dark">
        <tr>
            <th>Sale ID</th>
            <th>Customer Gender</th>
            <th>Customer Age</th>
            <th>Customer Email</th>
            <th>Customer Satisfaction</th>
            <th>Sale Date</th>
            <th>Store Location</th>
            <th>Coupon Used</th>
            <th>Purchase Method</th>
            <th>Items</th>
        </tr>
        </thead>
         <tbody>
        {{#each data}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.customer.gender}}</td>
            <td>{{this.customer.age}}</td>
            <td>{{this.customer.email}}</td>
            <td>{{this.customer.satisfaction}}</td>
            <td>{{this.saleDate}}</td>
            <td>{{this.storeLocation}}</td>
            <td>{{this.couponUsed}}</td>
            <td>{{this.purchaseMethod}}</td>
            <td>{{#each this.items as |item|}}
                     {{item._id}},{{item.name}},{{item.price.$numberDecimal}},{{item.quantity}},{{item.tags}}
                {{/each}}
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>